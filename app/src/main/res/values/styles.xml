        <item name="android:text"></item>
    </style>
    <style name="SucheBieteSingleViewLabelKontakt" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/weiss</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:text"></item>
    </style>
    <style name="SucheBieteSingleViewTextKontakt" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/weiss</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:text"></item>
    </style>



</resources>
