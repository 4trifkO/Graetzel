<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SecondTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="MenuTheme" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/graulich</item>
        <item name="android:textColor">@color/dunkel</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4.0dp</item>
        
    </style>

    <style name="buttons" >
        <item name="android:background">@drawable/mainbuttonrectangle</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/orange</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- ############# SucheBiete ##################### -->
    <style name="SucheBiete" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SucheBieteLinearLayout" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="SucheBieteRadioButton" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/weiss</item>
    </style>
    <style name="SucheBieteGrid" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:numColumns">1</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <!-- ############# SucheBieteErstelle ##################### -->
    <style name="SucheBieteErstelle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="SucheBieteErstelleLinearLayout1" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SucheBieteErstelleLinearLayout2" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="SucheBieteErstelleRadioButton" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/weiss</item>
    </style>
    <style name="SucheBieteErstelleLabel" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/weiss</item>
    </style>
    <style name="SucheBieteErstelleEditText" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/weiss</item>
    </style>
    <style name="SucheBieteErstelleButton" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
    </style>

    <!-- ############# SucheBieteSingle ##################### -->
    <style name="SucheBieteSingle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="SucheBieteSingleImageView" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <!-- <item name="android:layout_weight">1</item> -->
    </style>
    <style name="SucheBieteSingleLinearLayout" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SucheBieteSingleTextViewHeader" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/weiss</item>
    </style>
    <style name="SucheBieteSingleTextViewText" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/weiss</item>
    </style>



    <!-- ############# SucheBieteSingleView ##################### -->
    <style name="SucheBieteSingleView" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="SucheBieteSingleView_LinearLayout" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
